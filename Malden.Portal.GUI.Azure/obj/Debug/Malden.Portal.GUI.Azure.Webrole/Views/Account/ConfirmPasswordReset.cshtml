@model Malden.Portal.GUI.Azure.Webrole.Models.Users.PasswordResetModel

@{
    ViewBag.Title = "Reset Password";
}

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.Hidden("activationKey", ViewData["activationKey"].ToString())

    <span id="user"></span>
    @Html.AntiForgeryToken()

    <fieldset class="editor">
        <legend></legend>
        <ol id="login">
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { title = "Minimum 8 characters long including 1 special, 1 uppercase and 1 numeric", id = "newPassword", placeholder = "Password" })
                <div>
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </li>

            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { type = "password", placeholder = "Password" })
                <div>
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
            </li>

            <li class="right-aligned">
                <input type="submit" value="Reset" class="malden-button" />
            </li>
        </ol>

    </fieldset>
}

