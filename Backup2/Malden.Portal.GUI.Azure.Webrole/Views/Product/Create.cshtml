@model Malden.Portal.BLL.Product

<script src="~/Scripts/jquery-1.8.24.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@{
    ViewBag.Title = "Create a Product";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset class="editor">
        <legend>Product</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FulfilmentId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FulfilmentId)
            @Html.ValidationMessageFor(model => model.FulfilmentId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ContainerName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ContainerName)
            @Html.ValidationMessageFor(model => model.ContainerName)
        </div>

        <p>
            <input type="submit" value="Create" class="malden-button" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}
